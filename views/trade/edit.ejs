<%- include('../partials/header.ejs') %>
    <div class="body_content">
        <h1>Edit Trade Details</h1>
        <form action='/trades/<%= trade.id%>?_method=PUT' method='POST'>
            <table>
                <tr>
                    <td>
                        <label for="topic">topic (Category):</label>
                    </td>
                    <td>
                        <input type="text" id="topic" name="topic" placeholder="Enter topic" value="<%= trade.topic %>"
                            required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="name">Name:</label>
                    </td>
                    <td>
                        <input type="text" id="name" name="name" placeholder="Enter poster name"
                            value="<%= trade.name %>" required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="details">Poster details:</label>
                    </td>
                    <td>
                        <textarea id="details" name="details" placeholder="Enter poster details" required
                            minlength="10"><%= trade.details %></textarea>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="status">Status</label>
                    </td>
                    <td>
                        <input type="text" id="status" name="status" placeholder="Enter poster status"
                            value="<%= trade.status %>" required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="image">Image URL</label>
                    </td>
                    <td>
                        <input type="url" id="image" name="image" placeholder="Enter poster image url"
                            value="<%= trade.image %>" required>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" class="submit_button" value="Create Trade">
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <%- include('../partials/footer.ejs') %>